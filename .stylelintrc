{
  "customSyntax": "postcss",
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "no-empty-source": null,
    "block-no-empty": true,
    "color-hex-length": "short",
    "string-no-newline": true,
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen",
        "layer"
      ]
    }],
    "at-rule-no-deprecated": null
  }
}
